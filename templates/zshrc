 # Benchmark zsh startup time
timezsh() {
  shell=${1-$SHELL}
  for i in $(seq 1 10); do /usr/bin/time $shell -i -c exit; done
}

# Profile zsh startup time
profzsh() {
  shell=${1-$SHELL}
  ZPROF=true $shell -i -c exit
}

# Profiling zsh. Must load zprof at the beggining of this file
if [[ "$ZPROF" = true ]]; then
  zprof
fi